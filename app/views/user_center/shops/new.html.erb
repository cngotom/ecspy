<%= simple_form_for @shop, :url => user_center_shops_path,:methos=>'create', :html => { :class => 'form-horizontal' } do |f| %>

	 <% if notification = f.error_notification %>
	    <div class="alert alert-error fade in">
	      <a class="close" data-dismiss="alert" href="#">&times;</a>
	      <%= notification %>
	    </div>
	  <% end %>


	  <%= f.input :title ,:input_html => { :class => "span6" }, :hint => "add your title here" %>
	  <%= f.input :url, :input_html => { :class => "span6" }, :hint => "add your url here" %>


	  <div class="text-center">
	  	<%= f.button :submit %>
	  </div>


<% end %>