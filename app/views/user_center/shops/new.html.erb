				<div class="widget-body">

						

<%= simple_form_for @shop, :url => user_center_shops_path,:methos=>'create' do |f| %>

	 <% if notification = f.error_notification %>
	    <div class="alert alert-error fade in">
	      <a class="close" data-dismiss="alert" href="#">&times;</a>
	      <%= notification %>
	    </div>
	  <% end %>


	  <%= f.input :title,:label=>'店铺名称',:input_html => { :class => "span6" }, :hint => "请用汉语标示 示例:三六五食品专营店" %>
	  <%= f.input :url,:label=>'店铺链接', :input_html => { :class => "span6" }, :hint => "请输入首页地址 示例: http://slwsp.tmall.com/" %>


	  <div class="text-center">
	  	<%= f.button :submit ,:class=>'btn btn-primary'%>
	  </div>


<% end %>


	</div>
			</div>
		</div>


		</article>
</div>
</section>

<%= content_for :script do %>
<script type="text/javascript">
	
	$(function(){

		$('#shop_url').blur(function(){

			//if( /^http:\/\/\w*\.(tmall|taobao)\.com\//i.test($(this).val()))
			if( /^http:\/\/\w*\.(tmall)\.com\//i.test($(this).val()))
			{
				modify_val = $(this).val().substr(0,  $(this).val().indexOf("com/") + 4 );

				$(this).val(modify_val);
			}

		})

	})

</script>
<% end %>
