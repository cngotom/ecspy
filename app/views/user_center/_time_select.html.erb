<a href="" time="today" class="col-xs-4 col-sm-1 col-md-1">今天</a><a href="" time="yesterday" class="col-xs-4 col-sm-1 col-md-1" >昨天</a><a href="" time="yyday" class="col-xs-4 col-sm-1 col-md-1" >前天</a>
<%= content_for :script do %>
<script type="text/javascript">


$(function()
{
	var timeRange = {

		'today': {
			'offset':0,
		},
		'yesterday': {
			'offset':1,
		},
		'yyday': {
			'offset':2,
		},
	}
	function directToUrl(start)
	{
		var href = window.location.href;
		if(href.indexOf('offset')!=-1)
			href = href.substr(0,href.indexOf('offset')-1)

		if(href.indexOf('&') != -1)
			href = href + '&'
		href = href + '?offset=' +start ;

		window.location.href = href;
	}
	$('.search a').click(function(){

		var time = timeRange[$(this).attr('time')];

		var start = time.offset;
		
		directToUrl(start);
	
		return false;
	});

});
</script> 
<% end %>
